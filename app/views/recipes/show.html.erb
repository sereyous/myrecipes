<%= render "shared/page_title", { title: @recipe.name } %>
<div class="row">
  <div class="col-md-4 pull-right center">
    <%= link_to gravatar_for(@recipe.chef, size: 200), chef_path(@recipe.chef) %>
    <p>
      <h5>Brought to you by: <%= @recipe.chef.chefname %></h5>
    </p>
  </div>
  <div class="col-md-8">
    <% if logged_in? and (@recipe.chef == current_user || current_user.admin?) %>
      <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-success pull-right" %>
    <% end %>
    
    <% if logged_in? && current_user.admin? %>
      <%= link_to "[Delete Recipe]", @recipe, method: :delete, data: {confirm: "Are you sure?"} %>
    <% end %>
    
    <% if logged_in? && current_user != @recipe.chef %>
      <%= link_to "Review this recipe", new_recipe_review_path(@recipe) %>
    <% end %>
    
    <h3><%= @recipe.summary %></h3>
    <div class="show_recipe">
      <%= image_tag(@recipe.picture.url, class: "gravatar") if @recipe.picture? %>
    </div>
    <div class="well">
      <% if @recipe.styles.any? %>
      <p>Style: <%= render @recipe.styles %></p>
      <% end %>
      
      <% if @recipe.ingredients.any? %>
      <p>Ingredient: <%= render @recipe.ingredients %></p>
      <% end %>
      <p>
        <strong>Steps: </strong>
      </p>
      <div>
        <%= simple_format(@recipe.description) %>
        <div class="pull-right">
          <%= link_to like_recipe_path(@recipe, like: true), method: :post do %>
            <i class="glyphicon glyphicon-thumbs-up"></i> &nbsp; <%= @recipe.thumbs_up_total %>
          <% end %> &nbsp;
          <%= link_to like_recipe_path(@recipe, like: false), method: :post do %>
            <i class="glyphicon glyphicon-thumbs-down"></i> <%= @recipe.thumbs_down_total %>
          <% end %>
        </div>
      </div>
    </div>
    <hr />
    <% if @recipe.reviews.any? %>
      <% @recipe.reviews.each do |rev| %>
      <div class='recipe-review'>
        <h4><%= rev.title %></h4>
        <span>By <%= link_to rev.chef.chefname, chef_path(rev.chef) %> on <%= rev.created_at.strftime('%B %d, %Y') %></span>
        <p><%= rev.body %></p>
      </div>
      <% end %> 
    <% end %>
  </div>
</div>

<h5><%= link_to 'Return to Recipes Listing', recipes_path, class: "btn btn-warning btn-small" %></h5>